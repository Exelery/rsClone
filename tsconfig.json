{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.ts", "src/**/*.vue"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    
    "paths": {
      "@/*": ["./src/*"],
      "store/*": [
        "src/store/*"
      ]
    },
    "lib": [],
    "types": ["node", "jsdom"]
  },
  "exclude": [
    "src/**/__tests__/*"
  ],
  "types": [
    "node"
  ],
  "typeRoots": [
    "../node_modules/@types"
  ],
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}